@model List<QuanLyKhachSan.ViewModels.Room.RoomCardViewModel>
@{
    ViewData["Title"] = "Khách Sạn Cao Cấp";
}

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #e67e22;
        --accent-color: #3498db;
        --text-dark: #2c3e50;
        --text-light: #7f8c8d;
        --gold: #f39c12;
    }

    /* Hero Section */
    .hero-section {
        position: relative;
        height: 600px;
        background: linear-gradient(135deg, rgba(44, 62, 80, 0.95), rgba(52, 152, 219, 0.85)), url('https://images.unsplash.com/photo-1566073771259-6a8506099945?w=1600') center/cover;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 30% 50%, rgba(52, 152, 219, 0.3), transparent 50%);
            animation: pulse 8s ease-in-out infinite;
            pointer-events: none;
        }

    @@keyframes pulse {
        0%, 100%

    {
        opacity: 0.5;
    }

    50% {
        opacity: 0.8;
    }

    }

    .hero-content {
        text-align: center;
        z-index: 10;
        position: relative;
        animation: fadeInUp 1s ease-out;
    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .hero-title {
        font-size: 4rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
        letter-spacing: 2px;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        opacity: 0.95;
        font-weight: 300;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--secondary-color), var(--gold));
        border: none;
        padding: 15px 40px;
        font-size: 1.1rem;
        border-radius: 50px;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(230, 126, 34, 0.4);
        font-weight: 600;
        position: relative;
        z-index: 100;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(230, 126, 34, 0.6);
        }

    /* Featured Rooms Section */
    .featured-rooms {
        padding: 80px 0;
        background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
    }

        .featured-rooms h2 {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 1rem;
            position: relative;
            display: inline-block;
        }

            .featured-rooms h2::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 100px;
                height: 4px;
                background: linear-gradient(90deg, var(--secondary-color), var(--gold));
                border-radius: 2px;
            }

    .room-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
        transition: all 0.4s ease;
        height: 100%;
        background: white;
    }

        .room-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
        }

        .room-card img {
            height: 250px;
            object-fit: cover;
            transition: transform 0.4s ease;
        }

        .room-card:hover img {
            transform: scale(1.1);
        }

    .card-body {
        padding: 1.5rem;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0.8rem;
    }

    .card-text {
        color: var(--text-light);
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .room-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .price {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--secondary-color);
    }

    .type.badge {
        background: linear-gradient(135deg, var(--accent-color), #5dade2) !important;
        padding: 8px 15px;
        font-size: 0.9rem;
        border-radius: 20px;
    }

    .rating {
        margin-bottom: 1rem;
    }

    .star {
        color: #ddd;
        font-size: 1.2rem;
        transition: color 0.2s;
    }

        .star.filled {
            color: var(--gold);
        }

    .review-count {
        color: var(--text-light);
        font-size: 0.9rem;
        margin-left: 8px;
    }

    .btn-outline-primary {
        border: 2px solid var(--accent-color);
        color: var(--accent-color);
        padding: 10px 30px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        width: 100%;
    }

        .btn-outline-primary:hover {
            background: var(--accent-color);
            color: white;
            transform: scale(1.05);
        }

    /* Services Section */
    .services-section {
        padding: 80px 0;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

        .services-section h2 {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 3rem;
            position: relative;
            display: inline-block;
        }

            .services-section h2::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 100px;
                height: 4px;
                background: linear-gradient(90deg, var(--secondary-color), var(--gold));
                border-radius: 2px;
            }

    .service-item {
        padding: 2.5rem 1.5rem;
        background: white;
        border-radius: 15px;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 1.5rem;
    }

        .service-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

        .service-item i {
            color: var(--accent-color);
            transition: all 0.3s ease;
        }

        .service-item:hover i {
            transform: scale(1.1);
            color: var(--secondary-color);
        }

        .service-item h5 {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
            margin: 1rem 0;
        }

        .service-item p {
            color: var(--text-light);
            margin: 0;
            line-height: 1.6;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-title

    {
        font-size: 2.5rem;
    }

    .hero-subtitle {
        font-size: 1.2rem;
    }

    .featured-rooms h2,
    .services-section h2 {
        font-size: 2rem;
    }

    }
</style>

<!-- Phần Hero -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Chào Mừng Đến Khách Sạn Cao Cấp</h1>
            <p class="hero-subtitle">Trải nghiệm sự thoải mái và sang trọng tuyệt vời</p>
            <a href="@Url.Action("Rooms", "Home")" class="btn btn-primary">Đặt Phòng Ngay</a>
        </div>
    </div>
</section>

<!-- Phòng Nổi Bật -->
<section class="featured-rooms py-5">
    <div class="container">
        <h2 class="text-center mb-5">Phòng Nổi Bật</h2>
        <div class="row">
            @foreach (var room in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card room-card">
                        <img src="@room.ImageUrl" class="card-img-top" alt="@room.Name">
                        <div class="card-body">
                            <h5 class="card-title">@room.Name</h5>
                            <p class="card-text">@room.Description</p>
                            <div class="room-info">
                                <span class="price">@room.Price₫/đêm</span>
                                <span class="type badge bg-primary">@room.Type</span>
                            </div>
                            <div class="rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <span class="star @(i <= room.AverageRating ? "filled" : "")">★</span>
                                }
                                <span class="review-count">(@room.ReviewCount đánh giá)</span>
                            </div>
                            <a href="@Url.Action("Details", "Rooms", new { id = room.Id })" class="btn btn-outline-primary mt-3">Xem Chi Tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Phần Dịch Vụ -->
<section class="services-section bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Dịch Vụ Của Chúng Tôi</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="service-item">
                    <i class="fas fa-wifi fa-3x mb-3"></i>
                    <h5>WiFi Miễn Phí</h5>
                    <p>Kết nối internet tốc độ cao trong toàn khách sạn</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-item">
                    <i class="fas fa-swimming-pool fa-3x mb-3"></i>
                    <h5>Hồ Bơi</h5>
                    <p>Hồ bơi ngoài trời và trong nhà sang trọng</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-item">
                    <i class="fas fa-utensils fa-3x mb-3"></i>
                    <h5>Nhà Hàng</h5>
                    <p>Ẩm thực cao cấp với món ăn quốc tế</p>
                </div>
            </div>
        </div>
    </div>
</section>