@model List<QuanLyKhachSan.ViewModels.Payment.PaymentHistoryViewModel>

@{
    ViewData["Title"] = "Payment History";
}

<div class="container mt-5">
    <h1 class="mb-4">Payment History</h1>

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Transaction ID</th>
                                <th>Booking ID</th>
                                <th>Room</th>
                                <th>Amount</th>
                                <th>Method</th>
                                <th>Status</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td>@payment.TransactionId</td>
                                    <td>#@payment.BookingId</td>
                                    <td>@payment.RoomName</td>
                                    <td>$@payment.Amount.ToString("N2")</td>
                                    <td>@payment.PaymentMethod</td>
                                    <td>
                                        <span class="badge bg-@payment.Status.ToString().ToLower()">@payment.Status</span>
                                    </td>
                                    <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            <div class="alert alert-info">
                <h4>No payment history</h4>
                <p>You haven't made any payments yet.</p>
                <a href="@Url.Action("Index", "Bookings")" class="btn btn-primary">View My Bookings</a>
            </div>
        </div>
    }
</div>

<style>
    .bg-pending {
        background-color: #ffc107 !important;
        color: #212529;
    }

    .bg-completed {
        background-color: #28a745 !important;
    }

    .bg-failed {
        background-color: #dc3545 !important;
    }

    .bg-refunded {
        background-color: #6c757d !important;
    }
</style>