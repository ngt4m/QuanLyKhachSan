@model QuanLyKhachSan.ViewModels.Booking.BookingViewModel

@{
    ViewData["Title"] = "Đặt Phòng";
}
@section Styles {
    <link rel="stylesheet" href="~/css/booking-create.css" />
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card booking-card">
                <div class="card-header booking-header">
                    <h3 class="mb-0"><i class="fas fa-calendar-check me-2"></i>ĐẶT PHÒNG: @Model.RoomName</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="RoomId" />
                        <input type="hidden" asp-for="RoomName" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="CheckInDateInput" class="form-label fw-bold">
                                        <i class="fas fa-sign-in-alt me-2"></i>Ngày nhận phòng
                                    </label>
                                    <input asp-for="CheckInDateInput" class="form-control form-control-lg date-input" type="date" />
                                    <span asp-validation-for="CheckInDateInput" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="CheckOutDateInput" class="form-label fw-bold">
                                        <i class="fas fa-sign-out-alt me-2"></i>Ngày trả phòng
                                    </label>
                                    <input asp-for="CheckOutDateInput" class="form-control form-control-lg date-input" type="date" />
                                    <span asp-validation-for="CheckOutDateInput" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="NumberOfGuests" class="form-label fw-bold">
                                <i class="fas fa-users me-2"></i>Số lượng khách
                            </label>
                            <input asp-for="NumberOfGuests" class="form-control form-control-lg" min="1" max="10" />
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle me-1"></i>Tối đa 10 khách mỗi phòng
                            </small>
                            <span asp-validation-for="NumberOfGuests" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="SpecialRequests" class="form-label fw-bold">
                                <i class="fas fa-concierge-bell me-2"></i>Yêu cầu đặc biệt
                            </label>
                            <textarea asp-for="SpecialRequests" class="form-control custom-textarea" rows="4"
                                      placeholder="Vui lòng cho chúng tôi biết nếu bạn có yêu cầu đặc biệt nào..."></textarea>
                            <span asp-validation-for="SpecialRequests" class="text-danger small"></span>
                        </div>

                        <!-- Booking Summary -->
                        <div class="booking-summary mb-4 p-4">
                            <h5 class="summary-title mb-3">
                                <i class="fas fa-receipt me-2"></i>TÓM TẮT ĐẶT PHÒNG
                            </h5>
                            <div class="row">
                                <div class="col-6">
                                    <p class="summary-item">
                                        <strong><i class="fas fa-home me-2"></i>Phòng:</strong> @Model.RoomName
                                    </p>
                                    <p class="summary-item">
                                        <strong><i class="fas fa-sign-in-alt me-2"></i>Nhận phòng:</strong>
                                        <span id="checkInDisplay">@Model.CheckInDateInput.ToString("MMM dd, yyyy")</span>
                                    </p>
                                    <p class="summary-item">
                                        <strong><i class="fas fa-sign-out-alt me-2"></i>Trả phòng:</strong>
                                        <span id="checkOutDisplay">@Model.CheckInDateInput.ToString("MMM dd, yyyy")</span>
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p class="summary-item">
                                        <strong><i class="fas fa-moon me-2"></i>Số đêm:</strong>
                                        <span id="nightsCount" class="text-primary fw-bold">1</span>
                                    </p>
                                    <p class="summary-item">
                                        <strong><i class="fas fa-users me-2"></i>Số khách:</strong>
                                        <span id="guestsCount" class="fw-bold">@Model.NumberOfGuests</span>
                                    </p>
                                    <p class="summary-item total-price">
                                        <strong><i class="fas fa-money-bill-wave me-2"></i>Tổng tiền:</strong>
                                        <span id="totalPrice" class="fw-bold fs-5">$0.00</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-booking-confirm btn-lg py-3">
                                <i class="fas fa-check-circle me-2"></i>XÁC NHẬN ĐẶT PHÒNG
                            </button>
                            <a href="@Url.Action("Details", "Rooms", new { id = Model.RoomId })"
                               class="btn btn-booking-cancel btn-lg py-3">
                                <i class="fas fa-arrow-left me-2"></i>QUAY LẠI
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function calculateTotal() {
            const checkIn = new Date(document.getElementById('CheckInDateInput').value);
            const checkOut = new Date(document.getElementById('CheckOutDateInput').value);
            const guests = parseInt(document.getElementById('NumberOfGuests').value) || 1;

            if (checkIn && checkOut && checkOut > checkIn) {
                const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
                const pricePerNight = 199.99; // This should come from the server
                const totalPrice = nights * pricePerNight;

                document.getElementById('nightsCount').textContent = nights;
                document.getElementById('guestsCount').textContent = guests;
                document.getElementById('totalPrice').textContent = totalPrice.toFixed(2);
                document.getElementById('checkInDisplay').textContent = checkIn.toLocaleDateString('en-US', {
                    year: 'numeric', month: 'short', day: 'numeric'
                });
                document.getElementById('checkOutDisplay').textContent = checkOut.toLocaleDateString('en-US', {
                    year: 'numeric', month: 'short', day: 'numeric'
                });
            }
        }

        // Add event listeners
        document.getElementById('CheckInDateInput').addEventListener('change', calculateTotal);
        document.getElementById('CheckOutDateInput').addEventListener('change', calculateTotal);
        document.getElementById('NumberOfGuests').addEventListener('change', calculateTotal);

        // Initial calculation
        calculateTotal();
    </script>
}