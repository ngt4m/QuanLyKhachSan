@model QuanLyKhachSan.ViewModels.Booking.BookingDetailsViewModel

@{
    ViewData["Title"] = "Chi Tiết Đặt Phòng";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card booking-details-card">
                <div class="card-header booking-details-header">
                    <h3 class="mb-0">
                        <i class="fas fa-file-invoice me-2"></i>CHI TIẾT ĐẶT PHÒNG #@Model.Id
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="section-title">
                                <i class="fas fa-info-circle me-2"></i>THÔNG TIN ĐẶT PHÒNG
                            </h5>
                            <table class="table table-borderless details-table">
                                <tr>
                                    <td class="fw-bold"><i class="fas fa-circle me-1"></i>Trạng thái:</td>
                                    <td>
                                        <span class="booking-status badge bg-@Model.Status.ToString().ToLower()">
                                            @Model.Status
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold"><i class="fas fa-home me-1"></i>Phòng:</td>
                                    <td>@Model.RoomName</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold"><i class="fas fa-tag me-1"></i>Loại phòng:</td>
                                    <td>@Model.RoomType</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold"><i class="fas fa-sign-in-alt me-1"></i>Nhận phòng:</td>
                                    <td>@Model.CheckInDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold"><i class="fas fa-sign-out-alt me-1"></i>Trả phòng:</td>
                                    <td>@Model.CheckOutDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5 class="section-title">
                                <i class="fas fa-user-check me-2"></i>THÔNG TIN KHÁCH
                            </h5>
                            <table class="table table-borderless details-table">
                                <tr>
                                    <td class="fw-bold"><i class="fas fa-users me-1"></i>Số khách:</td>
                                    <td>@Model.NumberOfGuests người</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold"><i class="fas fa-money-bill-wave me-1"></i>Tổng tiền:</td>
                                    <td class="total-price">$@Model.TotalPrice.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold"><i class="fas fa-calendar-plus me-1"></i>Ngày đặt:</td>
                                    <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.SpecialRequests))
                    {
                        <div class="special-requests mt-4 p-4">
                            <h6 class="requests-title">
                                <i class="fas fa-concierge-bell me-2"></i>YÊU CẦU ĐẶC BIỆT
                            </h6>
                            <div class="requests-content">
                                <p class="mb-0">@Model.SpecialRequests</p>
                            </div>
                        </div>
                    }

                    <div class="action-buttons mt-4">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                            @if (Model.Status == QuanLyKhachSan.Models.BookingStatus.Pending ||
                                                        Model.Status == QuanLyKhachSan.Models.BookingStatus.Confirmed)
                            {
                                <a href="@Url.Action("Payment", "Payments", new { bookingId = Model.Id })"
                                   class="btn btn-payment me-md-2">
                                    <i class="fas fa-credit-card me-2"></i>THANH TOÁN NGAY
                                </a>
                                <form method="post" asp-action="Cancel" asp-route-id="@Model.Id"
                                      onsubmit="return confirm('Bạn có chắc chắn muốn hủy đặt phòng này?');"
                                      class="me-md-2">
                                    <button type="submit" class="btn btn-cancel">
                                        <i class="fas fa-times-circle me-2"></i>HỦY ĐẶT PHÒNG
                                    </button>
                                </form>
                            }
                            <a href="@Url.Action("Index", "Bookings")" class="btn btn-back">
                                <i class="fas fa-arrow-left me-2"></i>QUAY LẠI DANH SÁCH
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/booking-detail.css">