@model QuanLyKhachSan.ViewModels.Booking.BookingDetailsViewModel

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Booking Details #@Model.Id</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Booking Information</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Status:</strong></td>
                                    <td><span class="badge bg-@Model.Status.ToString().ToLower()">@Model.Status</span></td>
                                </tr>
                                <tr>
                                    <td><strong>Room:</strong></td>
                                    <td>@Model.RoomName</td>
                                </tr>
                                <tr>
                                    <td><strong>Room Type:</strong></td>
                                    <td>@Model.RoomType</td>
                                </tr>
                                <tr>
                                    <td><strong>Check-in:</strong></td>
                                    <td>@Model.CheckInDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                                <tr>
                                    <td><strong>Check-out:</strong></td>
                                    <td>@Model.CheckOutDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Guest Information</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Guests:</strong></td>
                                    <td>@Model.NumberOfGuests</td>
                                </tr>
                                <tr>
                                    <td><strong>Total Price:</strong></td>
                                    <td class="h5 text-success">$@Model.TotalPrice.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td><strong>Booked on:</strong></td>
                                    <td>@Model.CreatedAt.ToString("MMM dd, yyyy")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.SpecialRequests))
                    {
                        <div class="mt-3 p-3 bg-light rounded">
                            <h6>Special Requests</h6>
                            <p class="mb-0">@Model.SpecialRequests</p>
                        </div>
                    }

                    <div class="mt-4">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                            @if (Model.Status == QuanLyKhachSan.Models.BookingStatus.Pending ||
                                                        Model.Status == QuanLyKhachSan.Models.BookingStatus.Confirmed)
                            {
                                <a href="@Url.Action("Payment", "Payments", new { bookingId = Model.Id })" class="btn btn-primary me-md-2">
                                    <i class="fas fa-credit-card me-1"></i>Make Payment
                                </a>
                                <form method="post" asp-action="Cancel" asp-route-id="@Model.Id"
                                      onsubmit="return confirm('Are you sure you want to cancel this booking?');" class="me-md-2">
                                    <button type="submit" class="btn btn-outline-danger">
                                        Cancel Booking
                                    </button>
                                </form>
                            }
                            <a href="@Url.Action("Index", "Bookings")" class="btn btn-outline-secondary">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-pending {
        background-color: #ffc107 !important;
        color: #212529;
    }

    .bg-confirmed {
        background-color: #17a2b8 !important;
    }

    .bg-checkedin {
        background-color: #28a745 !important;
    }

    .bg-checkedout {
        background-color: #6c757d !important;
    }

    .bg-cancelled {
        background-color: #dc3545 !important;
    }
</style>