@model QuanLyKhachSan.ViewModels.Booking.BookingConfirmationViewModel

@{
    ViewData["Title"] = "Xác Nhận Đặt Phòng";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0"><i class="fas fa-check-circle me-2"></i>Đặt Phòng Thành Công!</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-check-circle fa-5x text-success mb-3"></i>
                        <h4>Cảm ơn bạn đã đặt phòng!</h4>
                        <p class="text-muted">Đặt chỗ của bạn đã được tạo thành công.</p>
                    </div>

                    <div class="booking-details p-4 border rounded">
                        <h5 class="mb-3">Chi Tiết Đặt Phòng</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Mã Đặt Phòng:</strong> #@Model.BookingId</p>
                                <p><strong>Phòng:</strong> @Model.RoomName</p>
                                <p><strong>Nhận phòng:</strong> @Model.CheckInDate.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Trạng thái:</strong> <span class="badge bg-success">@Model.Status</span></p>
                                <p><strong>Trả phòng:</strong> @Model.CheckOutDate.ToString("dd/MM/yyyy")</p>
                                <p><strong>Số khách:</strong> @Model.NumberOfGuests</p>
                            </div>
                        </div>
                        <hr>
                        <div class="text-center">
                            <h4 class="text-success">Tổng tiền: $@Model.TotalPrice.ToString("N2")</h4>
                        </div>
                    </div>

                    <div class="mt-4 p-3 bg-light rounded">
                        <h6>Bước Tiếp Theo</h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-envelope text-primary me-2"></i> Email xác nhận đã được gửi đến bạn</li>
                            <li><i class="fas fa-clock text-primary me-2"></i> Giờ nhận phòng từ 14:00</li>
                            <li><i class="fas fa-credit-card text-primary me-2"></i> Thanh toán sẽ được xử lý khi nhận phòng</li>
                        </ul>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a href="@Url.Action("Payment", "Payments", new { bookingId = Model.BookingId })" class="btn btn-primary btn-lg">
                            <i class="fas fa-credit-card me-2"></i>Thanh Toán
                        </a>
                        <a href="@Url.Action("Details", "Bookings", new { id = Model.BookingId })" class="btn btn-outline-secondary">
                            Xem Chi Tiết Đặt Phòng
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                            Quay Lại Trang Chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>