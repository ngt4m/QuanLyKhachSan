@model QuanLyKhachSan.ViewModels.Room.RoomDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-4">
            <h1>@Model.Name</h1>
            <p class="lead">@Model.Description</p>

            <div class="room-details mb-4">
                <div class="detail-item">
                    <strong>Price:</strong> $@Model.Price per night
                </div>
                <div class="detail-item">
                    <strong>Type:</strong> @Model.Type
                </div>
                <div class="detail-item">
                    <strong>Capacity:</strong> @Model.Capacity guests
                </div>
                <div class="detail-item">
                    <strong>Size:</strong> @Model.Size sq ft
                </div>
                <div class="detail-item">
                    <strong>Status:</strong>
                    <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                        @(Model.IsAvailable ? "Available" : "Not Available")
                    </span>
                </div>
            </div>

            <div class="rating mb-4">
                <strong>Rating: </strong>
                @for (int i = 1; i <= 5; i++)
                {
                    <span class="star @(i <= Model.AverageRating ? "filled" : "")">★</span>
                }
                <span>(@Model.Reviews.Count reviews)</span>
            </div>

            @if (Model.IsAvailable)
            {
                <a href="@Url.Action("Create", "Bookings", new { roomId = Model.Id })"
                   class="btn btn-primary btn-lg w-100">Book Now</a>
            }
            else
            {
                <button class="btn btn-secondary btn-lg w-100" disabled>Not Available</button>
            }
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="row mt-5">
        <div class="col-12">
            <h3>Guest Reviews</h3>
            @if (Model.Reviews.Any())
            {
                foreach (var review in Model.Reviews)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title">@review.UserName</h5>
                                <div class="rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <span class="star @(i <= review.Rating ? "filled" : "")">★</span>
                                    }
                                </div>
                            </div>
                            <p class="card-text">@review.Comment</p>
                            <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No reviews yet.</p>
            }
        </div>
    </div>
</div>