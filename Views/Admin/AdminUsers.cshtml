@model List<QuanLyKhachSan.ViewModels.Admin.UserViewModel>
@{
    ViewData["Title"] = "Quản Lý Người Dùng";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-users.css" />
}

<div class="admin-users-page">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-content">
                <div class="header-left">
                    <h1 class="page-title">
                        <i class="fas fa-users"></i>
                        Quản Lý Người Dùng
                    </h1>
                    <p class="page-subtitle">Quản lý tất cả người dùng trong hệ thống</p>
                </div>
                <div class="header-right">
                    <div class="stats-summary">
                        <div class="stat-item">
                            <div class="stat-icon total">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stat-content">
                                <span class="stat-value">@Model.Count()</span>
                                <span class="stat-label">Tổng người dùng</span>
                            </div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-icon recent">
                                <i class="fas fa-user-clock"></i>
                            </div>
                            <div class="stat-content">
                                <span class="stat-value">@Model.Count(u => u.CreatedAt >= DateTime.Now.AddDays(-30))</span>
                                <span class="stat-label">Mới (30 ngày)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-banner success">
                <div class="alert-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="alert-content">
                    <strong>Thành công!</strong>
                    <p>@TempData["SuccessMessage"]</p>
                </div>
                <button type="button" class="btn-close-alert" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        }

        <!-- Filters Section -->
        @* <div class="filters-card">
            <div class="filters-header">
                <i class="fas fa-filter"></i>
                <span>Tìm Kiếm & Lọc</span>
            </div>
            <div class="filters-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="searchInput" placeholder="Tìm theo tên, email, số điện thoại...">
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="sortFilter">
                            <option value="name-asc">Tên (A-Z)</option>
                            <option value="name-desc">Tên (Z-A)</option>
                            <option value="date-desc">Mới nhất</option>
                            <option value="date-asc">Cũ nhất</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-primary w-100" onclick="applyFilters()">
                            <i class="fas fa-search"></i> Tìm kiếm
                        </button>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-secondary w-100" onclick="resetFilters()">
                            <i class="fas fa-redo"></i> Đặt lại
                        </button>
                    </div>
                </div>
            </div>
        </div> *@

        <!-- Users Table Card -->
        <div class="table-card">
            <div class="table-card-header">
                <div class="header-left">
                    <i class="fas fa-list"></i>
                    <span>Danh Sách Người Dùng</span>
                </div>
                @* <div class="header-right">
                    <button class="btn btn-export" onclick="exportToExcel()">
                        <i class="fas fa-file-excel"></i> Xuất Excel
                    </button>
                </div> *@
            </div>
            <div class="table-card-body">
                <div class="table-responsive">
                    <table class="table users-table" id="usersTable">
                        <thead>
                            <tr>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-hashtag"></i>
                                        <span>ID</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-user"></i>
                                        <span>Họ Tên</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-envelope"></i>
                                        <span>Email</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-phone"></i>
                                        <span>Số Điện Thoại</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-calendar"></i>
                                        <span>Ngày Tạo</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-cog"></i>
                                        <span>Thao Tác</span>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr class="user-row" data-email="@user.Email" data-created="@user.CreatedAt.ToString("yyyy-MM-dd")">
                                    <td class="id-cell">
                                        <span class="badge-id" title="@user.Id">@user.Id.Substring(0, 8)...</span>
                                    </td>
                                    <td>
                                        <div class="user-info">
                                            <div class="user-avatar">
                                                <span>@(user.FirstName?.Substring(0, 1).ToUpper() ?? "U")</span>
                                            </div>
                                            <div class="user-details">
                                                <span class="user-name">@user.FirstName @user.LastName</span>
                                                @if (user.Email == User.Identity.Name)
                                                {
                                                    <span class="user-badge current">
                                                        <i class="fas fa-crown"></i> Bạn
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="email-cell">
                                            <i class="fas fa-envelope"></i>
                                            <span>@user.Email</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="phone-cell">
                                            @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                            {
                                                <i class="fas fa-phone"></i>
                                                <span>@user.PhoneNumber</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">
                                                    <i class="fas fa-minus"></i> Chưa có
                                                </span>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="date-cell">
                                            <span class="date-text">@user.CreatedAt.ToString("dd/MM/yyyy")</span>
                                            @if (user.CreatedAt >= DateTime.Now.AddDays(-7))
                                            {
                                                <span class="badge-new">Mới</span>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            @if (user.Email == User.Identity.Name)
                                            {
                                                <button type="button" class="btn-action btn-delete" disabled title="Không thể xóa tài khoản của bạn">
                                                    <i class="fas fa-lock"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <form method="post" asp-action="DeleteUser" class="d-inline"
                                                      onsubmit="return confirm('Bạn có chắc muốn xóa người dùng này?\n\nEmail: @user.Email\nTên: @user.FirstName @user.LastName');">
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <button type="submit" class="btn-action btn-delete" title="Xóa người dùng">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="6" class="text-center">
                                        <div class="no-data">
                                            <i class="fas fa-users-slash"></i>
                                            <p>Chưa có người dùng nào</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-users.js"></script>
}