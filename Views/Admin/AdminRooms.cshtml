@model List<QuanLyKhachSan.ViewModels.Admin.RoomViewModel>
@{
    ViewData["Title"] = "Quản Lý Phòng";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-rooms.css" />
}

<div class="admin-rooms-page">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-content">
                <div class="header-left">
                    <h1 class="page-title">
                        <i class="fas fa-bed"></i>
                        Quản Lý Phòng
                    </h1>
                    <p class="page-subtitle">Quản lý tất cả các phòng trong hệ thống</p>
                </div>
                <div class="header-right">
                    <div class="stats-summary">
                        <div class="stat-item">
                            <div class="stat-icon available">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="stat-content">
                                <span class="stat-value">@Model.Count(r => r.IsAvailable)</span>
                                <span class="stat-label">Có sẵn</span>
                            </div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-icon unavailable">
                                <i class="fas fa-times-circle"></i>
                            </div>
                            <div class="stat-content">
                                <span class="stat-value">@Model.Count(r => !r.IsAvailable)</span>
                                <span class="stat-label">Không có sẵn</span>
                            </div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-icon total">
                                <i class="fas fa-door-open"></i>
                            </div>
                            <div class="stat-content">
                                <span class="stat-value">@Model.Count()</span>
                                <span class="stat-label">Tổng số</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-banner success">
                <div class="alert-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="alert-content">
                    <strong>Thành công!</strong>
                    <p>@TempData["SuccessMessage"]</p>
                </div>
                <button type="button" class="btn-close-alert" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert-banner error">
                <div class="alert-icon">
                    <i class="fas fa-exclamation-circle"></i>
                </div>
                <div class="alert-content">
                    <strong>Lỗi!</strong>
                    <p>@TempData["ErrorMessage"]</p>
                </div>
                <button type="button" class="btn-close-alert" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        }

        <!-- Filters Section -->
        <div class="filters-card">
            <div class="filters-header">
                <i class="fas fa-filter"></i>
                <span>Bộ Lọc</span>
            </div>
            <div class="filters-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <select class="form-select" id="statusFilter">
                            <option value="">Tất cả trạng thái</option>
                            <option value="available">Có sẵn</option>
                            <option value="unavailable">Không có sẵn</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="typeFilter">
                            <option value="">Tất cả loại phòng</option>
                            <option value="Standard">Tiêu chuẩn</option>
                            <option value="Deluxe">Cao cấp</option>
                            <option value="Suite">Hạng sang</option>
                            <option value="Family">Gia đình</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="searchInput" placeholder="Tìm theo tên phòng...">
                    </div>
                    <div class="col-md-1-5">
                        <button type="button" class="btn btn-primary w-100" onclick="applyFilters()">
                            <i class="fas fa-search"></i> Lọc
                        </button>
                    </div>
                    <div class="col-md-1-5">
                        <button type="button" class="btn btn-secondary w-100" onclick="resetFilters()">
                            <i class="fas fa-redo"></i> Đặt lại
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Rooms Table Card -->
        <div class="table-card">
            <div class="table-card-header">
                <div class="header-left">
                    <i class="fas fa-list"></i>
                    <span>Danh Sách Phòng</span>
                </div>
                <div class="header-right">
                    <a href="@Url.Action("AddRoom", "Admin")" class="btn btn-add">
                        <i class="fas fa-plus-circle"></i>
                        <span>Thêm Phòng Mới</span>
                    </a>
                </div>
            </div>
            <div class="table-card-body">
                <div class="table-responsive">
                    <table class="table rooms-table" id="roomsTable">
                        <thead>
                            <tr>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-hashtag"></i>
                                        <span>ID</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-door-open"></i>
                                        <span>Tên Phòng</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-bed"></i>
                                        <span>Loại Phòng</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-money-bill-wave"></i>
                                        <span>Giá</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-info-circle"></i>
                                        <span>Trạng Thái</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-calendar"></i>
                                        <span>Ngày Tạo</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="th-content">
                                        <i class="fas fa-cog"></i>
                                        <span>Thao Tác</span>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var room in Model)
                            {
                                <tr class="room-row" data-status="@(room.IsAvailable ? "available" : "unavailable")" data-type="@room.Type">
                                    <td class="id-cell">
                                        <span class="badge-id">#@room.Id</span>
                                    </td>
                                    <td>
                                        <div class="room-info">
                                            <div class="room-icon">
                                                <i class="fas fa-door-open"></i>
                                            </div>
                                            <span class="room-name">@room.Name</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="type-badge type-@room.Type.ToLower()">
                                            <i class="fas fa-bed"></i>
                                            @switch (room.Type)
                                            {
                                                case "Standard":
                                                    <span>Tiêu chuẩn</span>
                                                    ; break;
                                                case "Deluxe":

                                                    <span>Cao cấp</span>
                                                    ; break;
                                                case "Suite":

                                                    <span>Hạng sang</span>
                                                    ; break;
                                                case "Family":

                                                    <span>Gia đình</span>
                                                    ; break;
                                                default:

                                                    <span>@room.Type</span>
                                                    ; break;
                                            }
                                        </span>
                                    </td>
                                    <td>
                                        <span class="price-text">@room.Price.ToString("N0")$</span>
                                    </td>
                                    <td>
                                        @if (room.IsAvailable)
                                        {
                                            <span class="status-badge status-available">
                                                <i class="fas fa-check-circle"></i>
                                                Có sẵn
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="status-badge status-unavailable">
                                                <i class="fas fa-times-circle"></i>
                                                Không có sẵn
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="date-text">@room.CreatedAt.ToString("dd/MM/yyyy")</span>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="@Url.Action("EditRoom", "Admin", new { id = room.Id })"
                                               class="btn-action btn-edit" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" asp-action="ToggleRoomStatus" class="d-inline">
                                                <input type="hidden" name="id" value="@room.Id" />
                                                <button type="submit"
                                                        class="btn-action @(room.IsAvailable ? "btn-disable" : "btn-enable")"
                                                        title="@(room.IsAvailable ? "Vô hiệu hóa" : "Kích hoạt")">
                                                    <i class="fas @(room.IsAvailable ? "fa-ban" : "fa-check")"></i>
                                                </button>
                                            </form>
                                            <form method="post" asp-action="DeleteRoom" class="d-inline"
                                                  onsubmit="return confirm('Bạn có chắc muốn xóa phòng này?');">
                                                <input type="hidden" name="id" value="@room.Id" />
                                                <button type="submit" class="btn-action btn-delete" title="Xóa">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="7" class="text-center">
                                        <div class="no-data">
                                            <i class="fas fa-inbox"></i>
                                            <p>Chưa có phòng nào</p>
                                            <a href="@Url.Action("AddRoom", "Admin")" class="btn btn-primary mt-3">
                                                <i class="fas fa-plus-circle"></i> Thêm Phòng Đầu Tiên
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-rooms.js"></script>
}