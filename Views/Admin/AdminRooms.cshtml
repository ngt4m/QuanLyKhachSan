@model List<QuanLyKhachSan.ViewModels.Admin.RoomViewModel>
@{
    ViewData["Title"] = "Manage Rooms";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="mt-4">Manage Rooms</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Rooms List</h5>
                <a href="@Url.Action("AddRoom", "Admin")" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Add New Room
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model)
                        {
                            <tr>
                                <td>@room.Id</td>
                                <td>@room.Name</td>
                                <td>@room.Type</td>
                                <td>$@room.Price.ToString("N2")</td>
                                <td>
                                    @if (room.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Unavailable</span>
                                    }
                                </td>
                                <td>@room.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("EditRoom", "Admin", new { id = room.Id })"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" asp-action="ToggleRoomStatus" class="d-inline">
                                            <input type="hidden" name="id" value="@room.Id" />
                                            <button type="submit" class="btn btn-sm @(room.IsAvailable ? "btn-warning" : "btn-success")">
                                                <i class="fas @(room.IsAvailable ? "fa-times" : "fa-check")"></i>
                                            </button>
                                        </form>
                                        <form method="post" asp-action="DeleteRoom" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this room?');">
                                            <input type="hidden" name="id" value="@room.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center">No rooms found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>