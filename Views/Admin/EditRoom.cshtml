@model QuanLyKhachSan.ViewModels.Admin.RoomCreateViewModel

@{
    ViewData["Title"] = "Edit Room";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="mt-4">Edit Room</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Edit Room Information</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Type" class="form-label"></label>
                            <select asp-for="Type" class="form-control">
                                <option value="">Select Room Type</option>
                                <option value="Standard">Standard</option>
                                <option value="Deluxe">Deluxe</option>
                                <option value="Suite">Suite</option>
                                <option value="Family">Family</option>
                                <option value="Executive">Executive</option>
                                <option value="Presidential">Presidential</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Capacity" class="form-label"></label>
                            <input asp-for="Capacity" class="form-control" type="number" min="1" max="10" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Size" class="form-label">Size (sq ft)</label>
                            <input asp-for="Size" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Size" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ImageUrl" class="form-label"></label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input asp-for="IsAvailable" class="form-check-input" />
                                <label asp-for="IsAvailable" class="form-check-label"></label>
                            </div>
                        </div>

                        <!-- Image Preview -->
                        <div class="form-group mb-3">
                            <label class="form-label">Image Preview</label>
                            <div id="imagePreview" class="border p-2 text-center" style="min-height: 150px; display: @(!string.IsNullOrEmpty(Model.ImageUrl) ? "block" : "none");">
                                <img id="previewImage" src="@Model.ImageUrl" alt="Preview" class="img-fluid" style="max-height: 140px;" />
                            </div>
                            <div id="noImage" class="border p-3 text-center text-muted" style="display: @(string.IsNullOrEmpty(Model.ImageUrl) ? "block" : "none");">
                                <i class="fas fa-image fa-2x mb-2"></i>
                                <p class="mb-0">No image preview available</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Update Room</button>
                    <a href="@Url.Action("AdminRooms", "Admin")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Image preview functionality
        document.getElementById('ImageUrl').addEventListener('input', function() {
            const imageUrl = this.value;
            const preview = document.getElementById('imagePreview');
            const noImage = document.getElementById('noImage');
            const previewImage = document.getElementById('previewImage');

            if (imageUrl) {
                previewImage.src = imageUrl;
                previewImage.onload = function() {
                    preview.style.display = 'block';
                    noImage.style.display = 'none';
                };
                previewImage.onerror = function() {
                    preview.style.display = 'none';
                    noImage.style.display = 'block';
                };
            } else {
                preview.style.display = 'none';
                noImage.style.display = 'block';
            }
        });
    </script>
}